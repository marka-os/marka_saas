{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    // Path aliases for TypeScript
    "baseUrl": ".",
    "paths": {
      "@marka/*": ["./src/*"],
      "@marka/components/*": ["./src/components/*"],
      "@marka/utils/*": ["./src/utils/*"],
      "@marka/hooks/*": ["./src/hooks/*"],
      "@marka/types/*": ["./src/types/*"],
      "@marka/stores/*": ["./src/stores/*"],
      "@marka/lib/*": ["./src/lib/*"],
      "@marka/styles/*": ["./src/styles/*"],
      "@marka/assets/*": ["./src/assets/*"],
      "@marka/pages/*": ["./src/pages/*"],
      "@marka/api/*": ["./src/api/*"]
    }
  },
  "include": ["src"]
  //"references": [{ "path": "./tsconfig.node.json" }],
  // "files": []
}
